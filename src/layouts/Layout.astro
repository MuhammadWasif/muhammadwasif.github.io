---
import GithubIcon from "../icons/github.astro";
import LinkedinIcon from "../icons/linkedin.astro";
import MediumIcon from "../icons/medium.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#3451b2" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Aref+Ruqaa+Ink:wght@700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav>
      <div>
        <h2>محمد واصف</h2>
      </div>
      <div class="links">
        <p>
          <a href="#">About</a>
        </p>
        <p>
          <a href="#">Experience</a>
        </p>
        <p>
          <a href="#">Projects</a>
        </p>
      </div>
    </nav>

    <slot />

    <div class="social">
      <div class="icon">
        <a href="https://github.com/thewasif" target="_blank">
          <GithubIcon />
        </a>
      </div>
      <div class="icon">
        <a href="https://medium.com/@muhammadwasif" target="_blank">
          <MediumIcon />
        </a>
      </div>
      <div class="icon">
        <a href="https://www.linkedin.com/in/muhammad-wasif/" target="_blank">
          <LinkedinIcon />
        </a>
      </div>
      <div class="vertical-line"></div>
    </div>
    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #3e63dd 30%,
          white 60%
        );
        --color: #11181c;
        --background: #fbfcfd;
        --primary: #3451b2;
      }
      html {
        font-family: system-ui, sans-serif;
        background-color: var(--background);
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.4rem 0.8rem;
      }
      @media (max-width: 450px) {
        nav {
          flex-direction: column;
        }
        .links {
          margin-top: 1rem;
        }
      }
      nav h2 {
        margin: 0;
        font-family: "Aref Ruqaa Ink", serif;
        user-select: none;
      }
      .links {
        display: flex;
      }

      .links p {
        margin: 0 0.8rem;
      }
      .links a {
        text-decoration: none;
        color: var(--primary);
      }
      .social {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        bottom: 0;
        left: 30px;
      }
      .social .icon {
        color: var(--color);
      }
      .vertical-line {
        width: 1px;
        height: 100px;
        background-color: var(--color);
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --accent: 124, 58, 237;
          --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #3e63dd 30%,
            white 60%
          );
          --color: #ecedee;
          --background: #151718;
          --primary: #849dff;
        }
      }

      @media (max-width: 1200px) {
        .social {
          display: none;
        }
      }

      ::selection{
  background-color: #3e63dd;
  color: white;
}
    </style>
  </body>
</html>
